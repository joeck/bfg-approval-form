                titleUppercase="false">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection id="pdfSubSection">
                            <uxap:blocks>
                                <VBox id="_IDGenVBox10" class="sapUiMediumMargin">
                                    <PDFViewer displayType="Embedded"
                                        id="pdfViewer"
                                    source="{viewContextModel>/PdfSource}"
                                    title="{viewContextModel>/FileName}"
                                        width="100%"
                                        height="600px"
                                        showDownloadButton="true"
                                        visible="{viewContextModel>/PdfAvailable}"
                                    />
                                    <MessageStrip id="_IDGenMessageStrip"
                                        text="No document available."
                                        type="Information"
                                        visible="{= ${viewContextModel>/PdfAvailable} === false}"
                                    />
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections> -->
        </uxap:ObjectPageLayout>
    </App>
</mvc:View>
