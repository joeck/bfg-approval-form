<mvc:View
    controllerName="bfgmgntappr.workflowuimodule.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:uxap="sap.uxap"
	xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
>
    <App id="app">
        <uxap:ObjectPageLayout
            id="objectPageLayout"
            showTitleInHeaderContent="true"
        >
            <!-- Object Page Header -->
            <uxap:headerTitle>
                <uxap:ObjectPageDynamicHeaderTitle id="objectPageHeaderTitle">
                    <uxap:expandedHeading>
                        <Title
                            id="title"
                            text="{context>/edit/documentTitle}"
                            wrapping="true"
                        />
                    </uxap:expandedHeading>
                </uxap:ObjectPageDynamicHeaderTitle>
            </uxap:headerTitle>

            <!-- Object Page Header Content -->
            <uxap:headerContent>
                <layout:Grid
                    id="ophg"
                    defaultSpan="L3 M6 S12"
                    class="sapUiResponsiveMargin"
                >
                    <VBox id="_IDGenVBox1">
                        <Label id="_IDGenLabel" text="Sales Order" />
                        <Input id="_IDGenInput_PO"
                            value="{context>/edit/PurchaseOrder}"
                            valueState="{parts: ['context>/edit/PurchaseOrderConfidence', 'context>/edit/PurchaseOrder'], formatter: '.formatConfidenceValueState'}"
                        />
                    </VBox>
                    <VBox id="_IDGenVBox2">
                        <Label id="_IDGenLabel1" text="Amount" />
                        <HBox id="_IDGenHBoxAmountCurrency">
                            <Input id="_IDGenInput_Amount"
                                value="{context>/edit/Amount}"
                                valueState="{parts: ['context>/edit/AmountConfidence', 'context>/edit/Amount'], formatter: '.formatConfidenceValueState'}"
                                width="70%"
                            />
                            <Input id="_IDGenInput_Currency"
                                value="{context>/edit/Currency}"
                                valueState="{parts: ['context>/edit/CurrencyConfidence', 'context>/edit/Currency'], formatter: '.formatConfidenceValueState'}"
                                width="30%"
                            />
                        </HBox>
                    </VBox>
                    <VBox id="_IDGenVBox3">
                        <Label id="_IDGenLabel2" text="Sales Order Date" />
                        <Input id="_IDGenInput_PODate"
                            value="{context>/edit/PurchaseOrderDate}"
                            valueState="{parts: ['context>/edit/PurchaseOrderDateConfidence', 'context>/edit/PurchaseOrderDate'], formatter: '.formatConfidenceValueState'}"
                        />
                        <Label id="_IDGenLabel3" text="Delivery Date" />
                        <Input id="_IDGenInput_DeliveryDate"
                            value="{context>/edit/DeliveryDate}"
                            valueState="{parts: ['context>/edit/DeliveryDateConfidence', 'context>/edit/DeliveryDate'], formatter: '.formatConfidenceValueState'}"
                        />
                    </VBox>
                </layout:Grid>
            </uxap:headerContent>

            <!-- Object Page Sections -->
            <uxap:sections>
                <!-- Header Data Section -->
                <uxap:ObjectPageSection
                    id="headerDataSection"
                    title="Header Data"
                    titleUppercase="false"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="headerDataSubSection"
                            title=""
                        >
                            <uxap:blocks>
                                <VBox id="_IDGenVBox4" class="sapUiMediumMargin">
                                    <layout:Grid id="_IDGenGrid"
                                        defaultSpan="L6 M12 S12"
                                        class="sapUiLargeMarginTop"
                                    >
                                        <!-- Consolidated Sold-To Section -->
                                        <VBox id="_IDGenVBoxSoldTo"
                                            class="sapUiMediumMarginBottom"
                                        >
                                            <!-- Dynamic Title with Icon -->
                                            <HBox id="_IDGenHBoxSoldToHeader" class="sapUiMediumMarginBottom">
                                                <Title id="_IDGenTitleSoldTo"
                                                    text="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.getSoldToTitle'}"
                                                    level="H3"
                                                />
                                                <core:Icon id="_IDGenIconSoldTo"
                                                    src="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.getSoldToIcon'}"
                                                    color="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.getSoldToIconColor'}"
                                                    class="sapUiTinyMarginBegin"
                                                    tooltip="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.getSoldToTooltip'}"
                                                />
                                            </HBox>

                                            <!-- Sold-To Section -->
                                            <f:SimpleForm
                                                id="soldToFormConsolidated"
                                                editable="false"
                                                layout="ResponsiveGridLayout"
                                                labelSpanXL="4"
                                                labelSpanL="4"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="1"
                                                singleContainerFullSize="false"
                                            >
                                                <f:content>
                                                    <Label id="_IDGenLabelSoldToID" text="ID" />
                                                    <!-- Show enrichment data (read-only) or editable input -->
                                                    <Input id="_IDGenSoldToIDEnrich"
                                                        value="{context>/edit/SoldTo/Enrichment/ID}"
                                                        valueState="Success"
                                                        editable="false"
                                                        visible="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/ID'], formatter: '.hasEnrichmentData'}"
                                                    />
                                                    <Input id="_IDGenSoldToIDInput"
                                                        value="{context>/edit/SoldTo/ID}"
                                                        valueState="Warning"
                                                        visible="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/ID'], formatter: '.hasNoEnrichmentData'}"
                                                    />

                                                    <Label id="_IDGenLabelSoldToName" text="Name" />
                                                    <!-- Show enrichment data (read-only) or editable input -->
                                                    <Input id="_IDGenSoldToNameEnrich"
                                                        value="{context>/edit/SoldTo/Enrichment/Name}"
                                                        valueState="Success"
                                                        editable="false"
                                                        visible="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.hasEnrichmentData'}"
                                                    />
                                                    <Input id="_IDGenSoldToNameInput"
                                                        value="{context>/edit/SoldTo/Name}"
                                                        valueState="{parts: ['context>/edit/SoldTo/NameConfidence', 'context>/edit/SoldTo/Name'], formatter: '.formatConfidenceValueState'}"
                                                        visible="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.hasNoEnrichmentData'}"
                                                    />

                                                    <Label id="_IDGenLabelSoldToCity" text="City, State" />
                                                    <!-- Show enrichment data (read-only) or editable input -->
                                                    <Input id="_IDGenSoldToCityEnrich"
                                                        value="{context>/edit/SoldTo/Enrichment/CityState}"
                                                        valueState="Success"
                                                        editable="false"
                                                        visible="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.hasEnrichmentData'}"
                                                    />
                                                    <Input id="_IDGenSoldToCityInput"
                                                        value="{context>/edit/SoldTo/CityState}"
                                                        valueState="{parts: ['context>/edit/SoldTo/CityStateConfidence', 'context>/edit/SoldTo/CityState'], formatter: '.formatConfidenceValueState'}"
                                                        visible="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.hasNoEnrichmentData'}"
                                                    />

                                                    <Label id="_IDGenLabelSoldToStreet" text="Street" />
                                                    <!-- Show enrichment data (read-only) or editable input -->
                                                    <Input id="_IDGenSoldToStreetEnrich"
                                                        value="{context>/edit/SoldTo/Enrichment/Street}"
                                                        valueState="Success"
                                                        editable="false"
                                                        visible="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.hasEnrichmentData'}"
                                                    />
                                                    <Input id="_IDGenSoldToStreetInput"
                                                        value="{context>/edit/SoldTo/Street}"
                                                        valueState="{parts: ['context>/edit/SoldTo/StreetConfidence', 'context>/edit/SoldTo/Street'], formatter: '.formatConfidenceValueState'}"
                                                        visible="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.hasNoEnrichmentData'}"
                                                    />

                                                    <Label id="_IDGenLabelSoldToPostal" text="Postal Code" />
                                                    <!-- Show enrichment data (read-only) or editable input -->
                                                    <Input id="_IDGenSoldToPostalEnrich"
                                                        value="{context>/edit/SoldTo/Enrichment/PostalCode}"
                                                        valueState="Success"
                                                        editable="false"
                                                        visible="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.hasEnrichmentData'}"
                                                    />
                                                    <Input id="_IDGenSoldToPostalInput"
                                                        value="{context>/edit/SoldTo/PostalCode}"
                                                        valueState="{parts: ['context>/edit/SoldTo/PostalCodeConfidence', 'context>/edit/SoldTo/PostalCode'], formatter: '.formatConfidenceValueState'}"
                                                        visible="{parts: ['context>/edit/SoldTo/Enrichment', 'context>/edit/SoldTo/Enrichment/Name'], formatter: '.hasNoEnrichmentData'}"
                                                    />
                                                </f:content>
                                            </f:SimpleForm>
                                        </VBox>

                                        <!-- Ship-To Section -->
                                        <VBox id="_IDGenVBox6" class="sapUiMediumMarginBottom">
                                            <Title id="_IDGenTitle1"
                                                text="Ship-To"
                                                level="H3"
                                                class="sapUiMediumMarginBottom"
                                            />

                                            <f:SimpleForm
                                                id="shipToForm"
                                                editable="false"
                                                layout="ResponsiveGridLayout"
                                                labelSpanXL="4"
                                                labelSpanL="4"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="1"
                                                singleContainerFullSize="false"
                                            >
                                                <f:content>
                                                    <Label id="_IDGenLabel7" text="Name" />
                                                    <Input id="_IDGenInput_ShipToName"
                                                        value="{context>/edit/ShipTo/Name}"
                                                        valueState="{parts: ['context>/edit/ShipTo/NameConfidence', 'context>/edit/ShipTo/Name'], formatter: '.formatConfidenceValueState'}"
                                                    />

                                                    <Label id="_IDGenLabel8" text="City, State" />
                                                    <Input id="_IDGenInput_ShipToCityState"
                                                        value="{context>/edit/ShipTo/CityState}"
                                                        valueState="{parts: ['context>/edit/ShipTo/CityStateConfidence', 'context>/edit/ShipTo/CityState'], formatter: '.formatConfidenceValueState'}"
                                                    />

                                                    <Label id="_IDGenLabel9" text="Street" />
                                                    <Input id="_IDGenInput_ShipToStreet"
                                                        value="{context>/edit/ShipTo/Street}"
                                                        valueState="{parts: ['context>/edit/ShipTo/StreetConfidence', 'context>/edit/ShipTo/Street'], formatter: '.formatConfidenceValueState'}"
                                                    />

                                                    <Label id="_IDGenLabel10" text="Postal Code" />
                                                    <Input id="_IDGenInput_ShipToPostal"
                                                        value="{context>/edit/ShipTo/PostalCode}"
                                                        valueState="{parts: ['context>/edit/ShipTo/PostalCodeConfidence', 'context>/edit/ShipTo/PostalCode'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                </f:content>
                                            </f:SimpleForm>
                                        </VBox>
                                    </layout:Grid>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>

                <!-- Line Items Section -->
                <uxap:ObjectPageSection
                    id="lineItemsSection"
                    title="Line Items"
                    titleUppercase="false"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="lineItemsSubSection"
                            title=""
                        >
                            <uxap:blocks>
                                <VBox id="_IDGenVBox7" class="sapUiMediumMargin">
                                    <Table
                                        id="lineItemsTable"
                                        items="{context>/edit/LineItems}"
                                        mode="None"
                                        class="sapUiResponsiveMargin"
                                        growing="true"
                                        growingThreshold="100"
                                    >
                                        <headerToolbar>
                                            <Toolbar id="_IDGenToolbar">
                                                <Title id="_IDGenTitle2"
                                                    text="Materials"
                                                    level="H2"
                                                />
                                            </Toolbar>
                                        </headerToolbar>
                                        <columns>
                                            <Column id="_IDGenColumn88">
                                                <Text id="_IDGenText88" text="Bell Material" />
                                            </Column>
                                            <Column id="_IDGenColumn">
                                                <Text id="_IDGenText8" text="Customer Material" />
                                            </Column>
                                            <Column id="asdf">
                                                <Text id="_IDGenText8123" text="Description" />
                                            </Column>
                                            <Column id="_IDGenColumn22">
                                                <Text id="_IDGenText22" text="Item Number" />
                                            </Column>
                                            <Column id="_IDGenColumn4">
                                                <Text id="_IDGenText212" text="Unit Price" />
                                            </Column>
                                            <Column id="_IDGenColumn5">
                                                <Text id="_IDGenText232" text="Curency" />
                                            </Column>
                                            <Column id="_IDGenColumn1">
                                                <Text id="_IDGenText9" text="Quantity" />
                                            </Column>
                                            <Column id="_IDGenColumn2">
                                                <Text id="_IDGenText10" text="Unit of Measure" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem id="_IDGenColumnListItem">
                                                <cells>
                                                    <Input id="_IDGenInput_SupplierMat"
                                                        value="{context>SupplierMaterialNumber}"
                                                        valueState="{parts: ['context>SupplierMaterialNumberConfidence', 'context>SupplierMaterialNumber'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_CustomerMat"
                                                        value="{context>CustomerMaterialNumber}"
                                                        valueState="{parts: ['context>CustomerMaterialNumberConfidence', 'context>CustomerMaterialNumber'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_Description"
                                                        value="{context>Description}"
                                                        valueState="{parts: ['context>DescriptionConfidence', 'context>Description'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_ItemNumber"
                                                        value="{context>ItemNumber}"
                                                        valueState="{parts: ['context>ItemNumberConfidence', 'context>ItemNumber'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_UnitPrice"
                                                        value="{context>UnitPrice}"
                                                        valueState="{parts: ['context>UnitPriceConfidence', 'context>UnitPrice'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_CurrencyCode"
                                                        value="{context>CurrencyCode}"
                                                        valueState="{parts: ['context>CurrencyCodeConfidence', 'context>CurrencyCode'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_Quantity"
                                                        value="{context>Quantity}"
                                                        valueState="{parts: ['context>QuantityConfidence', 'context>Quantity'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_UOM"
                                                        value="{context>UnitOfMeasure}"
                                                        valueState="{parts: ['context>UnitOfMeasureConfidence', 'context>UnitOfMeasure'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>

            <!-- <uxap:sections>
                <uxap:ObjectPageSection
                    id="pdfSection"
                    title="Source Document"
                titleUppercase="false">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection id="pdfSubSection">
                            <uxap:blocks>
                                <VBox id="_IDGenVBox10" class="sapUiMediumMargin">
                                    <PDFViewer displayType="Embedded"
                                        id="pdfViewer"
                                    source="{context>/edit/PdfSource}"
                                    title="{context>/edit/FileName}"
                                        width="100%"
                                        height="600px"
                                        showDownloadButton="true"
                                        visible="{context>/edit/PdfAvailable}"
                                    />
                                    <MessageStrip id="_IDGenMessageStrip"
                                        text="No document available."
                                        type="Information"
                                        visible="{= ${context>/edit/PdfAvailable} === false}"
                                    />
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections> -->
        </uxap:ObjectPageLayout>
    </App>
</mvc:View>
