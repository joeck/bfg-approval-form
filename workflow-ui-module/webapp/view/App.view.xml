<mvc:View
    controllerName="bfgmgntappr.workflowuimodule.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:uxap="sap.uxap"
	xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
>
    <App id="app">
        <uxap:ObjectPageLayout
            id="objectPageLayout"
            showTitleInHeaderContent="true"
        >
            <!-- Object Page Header -->
            <uxap:headerTitle>
                <uxap:ObjectPageDynamicHeaderTitle id="objectPageHeaderTitle">
                    <uxap:expandedHeading>
                        <Title
                            id="title"
                            text="{viewContextModel>/documentTitle}"
                            wrapping="true"
                        />
                    </uxap:expandedHeading>
                </uxap:ObjectPageDynamicHeaderTitle>
            </uxap:headerTitle>

            <!-- Object Page Header Content -->
            <uxap:headerContent>
                <layout:Grid
                    id="ophg"
                    defaultSpan="L3 M6 S12"
                    class="sapUiResponsiveMargin"
                >
                    <VBox id="_IDGenVBox1">
                        <Label id="_IDGenLabel" text="Purchase Order" />
                        <Input id="_IDGenInput_PO"
                            value="{viewContextModel>/PurchaseOrder}"
                            valueState="{parts: ['viewContextModel>/PurchaseOrderConfidence', 'viewContextModel>/PurchaseOrder'], formatter: '.formatConfidenceValueState'}"
                        />
                    </VBox>
                    <VBox id="_IDGenVBox2">
                        <Label id="_IDGenLabel1" text="Amount" />
                        <HBox id="_IDGenHBoxAmountCurrency">
                            <Input id="_IDGenInput_Amount"
                                value="{viewContextModel>/Amount}"
                                valueState="{parts: ['viewContextModel>/AmountConfidence', 'viewContextModel>/Amount'], formatter: '.formatConfidenceValueState'}"
                                width="70%"
                            />
                            <Input id="_IDGenInput_Currency"
                                value="{viewContextModel>/Currency}"
                                valueState="{parts: ['viewContextModel>/CurrencyConfidence', 'viewContextModel>/Currency'], formatter: '.formatConfidenceValueState'}"
                                width="30%"
                            />
                        </HBox>
                    </VBox>
                    <VBox id="_IDGenVBox3">
                        <Label id="_IDGenLabel2" text="Purchase Order Date" />
                        <Input id="_IDGenInput_PODate"
                            value="{viewContextModel>/PurchaseOrderDate}"
                            valueState="{parts: ['viewContextModel>/PurchaseOrderDateConfidence', 'viewContextModel>/PurchaseOrderDate'], formatter: '.formatConfidenceValueState'}"
                        />
                    </VBox>
                </layout:Grid>
            </uxap:headerContent>

            <!-- Object Page Sections -->
            <uxap:sections>
                <!-- Header Data Section -->
                <uxap:ObjectPageSection
                    id="headerDataSection"
                    title="Header Data"
                    titleUppercase="false"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="headerDataSubSection"
                            title=""
                        >
                            <uxap:blocks>
                                <VBox id="_IDGenVBox4" class="sapUiMediumMargin">
                                    <layout:Grid id="_IDGenGrid"
                                        defaultSpan="L6 M12 S12"
                                        class="sapUiLargeMarginTop"
                                    >
                                        <!-- Sold-To Section with Enrichment (S/4 Master Data) -->
                                        <VBox id="_IDGenVBox35"
                                            class="sapUiMediumMarginEnd sapUiMediumMarginBottom"
                                            visible="{parts: ['viewContextModel>/SoldTo/Enrichment', 'viewContextModel>/SoldTo/Enrichment/Name'], formatter: '.hasEnrichmentData'}"
                                        >
                                            <HBox id="_IDGenHBoxEnrichmentTitle" class="sapUiMediumMarginBottom">
                                                <Title id="_IDGenTitle3"
                                                    text="Sold-To (S/4 Master Data)"
                                                    level="H3"
                                                />
                                                <core:Icon id="_IDGenIconSuccess"
                                                    src="sap-icon://accept"
                                                    color="#2B7D2B"
                                                    class="sapUiTinyMarginBegin"
                                                    tooltip="Master data found in S/4 system"
                                                />
                                            </HBox>

                                            <f:SimpleForm
                                                id="soldToFormEnrichment"
                                                editable="false"
                                                layout="ResponsiveGridLayout"
                                                labelSpanXL="4"
                                                labelSpanL="4"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="1"
                                                singleContainerFullSize="false"
                                            >
                                                <f:content>
                                                    <Label id="_IDGenLabelEnrichName" text="Name" />
                                                    <ObjectStatus id="_IDGenEnrichmentName"
                                                        text="{viewContextModel>/SoldTo/Enrichment/Name}"
                                                        state="Success"
                                                    />

                                                    <Label id="_IDGenLabelEnrichCity" text="City, State" />
                                                    <ObjectStatus id="_IDGenEnrichmentCity"
                                                        text="{viewContextModel>/SoldTo/Enrichment/CityState}"
                                                        state="Success"
                                                    />

                                                    <Label id="_IDGenLabelEnrichStreet" text="Street" />
                                                    <ObjectStatus id="_IDGenEnrichmentStreet"
                                                        text="{viewContextModel>/SoldTo/Enrichment/Street}"
                                                        state="Success"
                                                    />

                                                    <Label id="_IDGenLabelEnrichPostal" text="Postal Code" />
                                                    <ObjectStatus id="_IDGenEnrichmentPostal"
                                                        text="{viewContextModel>/SoldTo/Enrichment/PostalCode}"
                                                        state="Success"
                                                    />
                                                </f:content>
                                            </f:SimpleForm>
                                        </VBox>

                                        <!-- Sold-To Section (Editable when no master data) -->
                                        <VBox id="_IDGenVBox15"
                                            class="sapUiMediumMarginEnd sapUiMediumMarginBottom"
                                            visible="{parts: ['viewContextModel>/SoldTo/Enrichment', 'viewContextModel>/SoldTo/Enrichment/Name'], formatter: '.hasNoEnrichmentData'}"
                                        >
                                            <HBox id="_IDGenHBoxSoldToTitle" class="sapUiMediumMarginBottom">
                                                <Title id="_IDGenTitle11"
                                                    text="Sold-To"
                                                    level="H3"
                                                />
                                                <core:Icon id="_IDGenIconWarning"
                                                    src="sap-icon://warning"
                                                    color="#E9730C"
                                                    class="sapUiTinyMarginBegin"
                                                    tooltip="No master data found in S/4 system - please verify data"
                                                />
                                            </HBox>

                                            <f:SimpleForm
                                                id="soldToForm1"
                                                editable="true"
                                                layout="ResponsiveGridLayout"
                                                labelSpanXL="4"
                                                labelSpanL="4"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="1"
                                                singleContainerFullSize="false"
                                            >
                                                <f:content>
                                                    <Label id="_IDGenLabel31" text="Name" />
                                                    <Input id="_IDGenInput_SoldToName"
                                                        value="{viewContextModel>/SoldTo/Name}"
                                                        valueState="{parts: ['viewContextModel>/SoldTo/NameConfidence', 'viewContextModel>/SoldTo/Name'], formatter: '.formatConfidenceValueState'}"
                                                    />

                                                    <Label id="_IDGenLabel41" text="City, State" />
                                                    <Input id="_IDGenInput_SoldToCityState"
                                                        value="{viewContextModel>/SoldTo/CityState}"
                                                        valueState="{parts: ['viewContextModel>/SoldTo/CityStateConfidence', 'viewContextModel>/SoldTo/CityState'], formatter: '.formatConfidenceValueState'}"
                                                    />

                                                    <Label id="_IDGenLabel5" text="Street" />
                                                    <Input id="_IDGenInput_SoldToStreet"
                                                        value="{viewContextModel>/SoldTo/Street}"
                                                        valueState="{parts: ['viewContextModel>/SoldTo/StreetConfidence', 'viewContextModel>/SoldTo/Street'], formatter: '.formatConfidenceValueState'}"
                                                    />

                                                    <Label id="_IDGenLabel6" text="Postal Code" />
                                                    <Input id="_IDGenInput_SoldToPostal"
                                                        value="{viewContextModel>/SoldTo/PostalCode}"
                                                        valueState="{parts: ['viewContextModel>/SoldTo/PostalCodeConfidence', 'viewContextModel>/SoldTo/PostalCode'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                </f:content>
                                            </f:SimpleForm>
                                        </VBox>

                                        <!-- Ship-To Section -->
                                        <VBox id="_IDGenVBox6" class="sapUiMediumMarginBottom">
                                            <Title id="_IDGenTitle1"
                                                text="Ship-To"
                                                level="H3"
                                                class="sapUiMediumMarginBottom"
                                            />

                                            <f:SimpleForm
                                                id="shipToForm"
                                                editable="false"
                                                layout="ResponsiveGridLayout"
                                                labelSpanXL="4"
                                                labelSpanL="4"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="1"
                                                singleContainerFullSize="false"
                                            >
                                                <f:content>
                                                    <Label id="_IDGenLabel7" text="Name" />
                                                    <Input id="_IDGenInput_ShipToName"
                                                        value="{viewContextModel>/edit/ShipTo/Name}"
                                                        valueState="{parts: ['viewContextModel>/ShipTo/NameConfidence', 'viewContextModel>/edit/ShipTo/Name'], formatter: '.formatConfidenceValueState'}"
                                                    />

                                                    <Label id="_IDGenLabel8" text="City, State" />
                                                    <Input id="_IDGenInput_ShipToCityState"
                                                        value="{viewContextModel>/ShipTo/CityState}"
                                                        valueState="{parts: ['viewContextModel>/ShipTo/CityStateConfidence', 'viewContextModel>/ShipTo/CityState'], formatter: '.formatConfidenceValueState'}"
                                                    />

                                                    <Label id="_IDGenLabel9" text="Street" />
                                                    <Input id="_IDGenInput_ShipToStreet"
                                                        value="{viewContextModel>/ShipTo/Street}"
                                                        valueState="{parts: ['viewContextModel>/ShipTo/StreetConfidence', 'viewContextModel>/ShipTo/Street'], formatter: '.formatConfidenceValueState'}"
                                                    />

                                                    <Label id="_IDGenLabel10" text="Postal Code" />
                                                    <Input id="_IDGenInput_ShipToPostal"
                                                        value="{viewContextModel>/ShipTo/PostalCode}"
                                                        valueState="{parts: ['viewContextModel>/ShipTo/PostalCodeConfidence', 'viewContextModel>/ShipTo/PostalCode'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                </f:content>
                                            </f:SimpleForm>
                                        </VBox>
                                    </layout:Grid>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>

                <!-- Line Items Section -->
                <uxap:ObjectPageSection
                    id="lineItemsSection"
                    title="Line Items"
                    titleUppercase="false"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="lineItemsSubSection"
                            title=""
                        >
                            <uxap:blocks>
                                <VBox id="_IDGenVBox7" class="sapUiMediumMargin">
                                    <Table
                                        id="lineItemsTable"
                                        items="{viewContextModel>/LineItems}"
                                        mode="None"
                                        class="sapUiResponsiveMargin"
                                        growing="true"
                                        growingThreshold="100"
                                    >
                                        <headerToolbar>
                                            <Toolbar id="_IDGenToolbar">
                                                <Title id="_IDGenTitle2"
                                                    text="Materials"
                                                    level="H2"
                                                />
                                            </Toolbar>
                                        </headerToolbar>
                                        <columns>
                                            <Column id="_IDGenColumn88">
                                                <Text id="_IDGenText88" text="Bell Material" />
                                            </Column>
                                            <Column id="_IDGenColumn">
                                                <Text id="_IDGenText8" text="Customer Material" />
                                            </Column>
                                            <Column id="asdf">
                                                <Text id="_IDGenText8123" text="Description" />
                                            </Column>
                                            <Column id="_IDGenColumn22">
                                                <Text id="_IDGenText22" text="Item Number" />
                                            </Column>
                                            <Column id="_IDGenColumn4">
                                                <Text id="_IDGenText212" text="Unit Price" />
                                            </Column>
                                            <Column id="_IDGenColumn5">
                                                <Text id="_IDGenText232" text="Curency" />
                                            </Column>
                                            <Column id="_IDGenColumn1">
                                                <Text id="_IDGenText9" text="Quantity" />
                                            </Column>
                                            <Column id="_IDGenColumn2">
                                                <Text id="_IDGenText10" text="Unit of Measure" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem id="_IDGenColumnListItem">
                                                <cells>
                                                    <Input id="_IDGenInput_SupplierMat"
                                                        value="{viewContextModel>SupplierMaterialNumber}"
                                                        valueState="{parts: ['viewContextModel>SupplierMaterialNumberConfidence', 'viewContextModel>SupplierMaterialNumber'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_CustomerMat"
                                                        value="{viewContextModel>CustomerMaterialNumber}"
                                                        valueState="{parts: ['viewContextModel>CustomerMaterialNumberConfidence', 'viewContextModel>CustomerMaterialNumber'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_Description"
                                                        value="{viewContextModel>Description}"
                                                        valueState="{parts: ['viewContextModel>DescriptionConfidence', 'viewContextModel>Description'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_ItemNumber"
                                                        value="{viewContextModel>ItemNumber}"
                                                        valueState="{parts: ['viewContextModel>ItemNumberConfidence', 'viewContextModel>ItemNumber'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_UnitPrice"
                                                        value="{viewContextModel>UnitPrice}"
                                                        valueState="{parts: ['viewContextModel>UnitPriceConfidence', 'viewContextModel>UnitPrice'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_CurrencyCode"
                                                        value="{viewContextModel>CurrencyCode}"
                                                        valueState="{parts: ['viewContextModel>CurrencyCodeConfidence', 'viewContextModel>CurrencyCode'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_Quantity"
                                                        value="{viewContextModel>Quantity}"
                                                        valueState="{parts: ['viewContextModel>QuantityConfidence', 'viewContextModel>Quantity'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                    <Input id="_IDGenInput_UOM"
                                                        value="{viewContextModel>UnitOfMeasure}"
                                                        valueState="{parts: ['viewContextModel>UnitOfMeasureConfidence', 'viewContextModel>UnitOfMeasure'], formatter: '.formatConfidenceValueState'}"
                                                    />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>

