                                            </f:SimpleForm>
                                        </VBox>
                                    </layout:Grid>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>

                <!-- Line Items Section -->
                <uxap:ObjectPageSection
                    id="lineItemsSection"
                    title="Line Items"
                    titleUppercase="false"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="lineItemsSubSection"
                            title=""
                        >
                            <uxap:blocks>
                                <VBox id="_IDGenVBox7" class="sapUiMediumMargin">
                                    <Table
                                        id="lineItemsTable"
                                        items="{viewContextModel>/LineItems}"
                                        mode="None"
                                        class="sapUiResponsiveMargin"
                                        growing="true"
                                        growingThreshold="100"
                                    >
                                        <headerToolbar>
                                            <Toolbar id="_IDGenToolbar">
                                                <Title id="_IDGenTitle2"
                                                    text="Materials"
                                                    level="H2"
                                                />
                                            </Toolbar>
                                        </headerToolbar>
                                        <columns>
                                            <Column id="_IDGenColumn88">
                                                <Text id="_IDGenText88" text="Bell Material" />
                                            </Column>
                                            <Column id="_IDGenColumn">
                                                <Text id="_IDGenText8" text="Customer Material" />
                                            </Column>
                                            <Column id="asdf">
                                                <Text id="_IDGenText8123" text="Description" />
                                            </Column>
                                            <Column id="_IDGenColumn22">
                                                <Text id="_IDGenText22" text="Item Number" />
                                            </Column>
                                            <Column id="_IDGenColumn4">
                                                <Text id="_IDGenText212" text="Unit Price" />
                                            </Column>
                                            <Column id="_IDGenColumn5">
                                                <Text id="_IDGenText232" text="Curency" />
                                            </Column>
                                            <Column id="_IDGenColumn1">
                                                <Text id="_IDGenText9" text="Quantity" />
                                            </Column>
                                            <Column id="_IDGenColumn2">
                                                <Text id="_IDGenText10" text="Unit of Measure" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem id="_IDGenColumnListItem">
                                                <cells>
                                                    <Text id="_IDGenText11"
                                                        text="{viewContextModel>SupplierMaterialNumber}"
                                                        wrapping="false"
                                                    />
                                                    <Text id="_IDGenText111"
                                                        text="{viewContextModel>CustomerMaterialNumber}"
                                                        wrapping="false"
                                                    />
                                                    <Text id="_IDGenText21"
                                                        text="{viewContextModel>Description}"
                                                        wrapping="false"
                                                    />
                                                    <ObjectNumber id="_IDGenObjectNumber2"
                                                        number="{viewContextModel>ItemNumber}"
                                                        emphasized="false"
                                                    />
                                                    <ObjectNumber id="_IDGenObjectNumber12"
                                                        number="{viewContextModel>UnitPrice}"
                                                        emphasized="false"
                                                    />
                                                    <Text id="_IDGenText121"
                                                        text="{viewContextModel>CurrencyCode}"
                                                        wrapping="false"
                                                    />
                                                    <ObjectNumber id="_IDGenObjectNumber"
                                                        number="{viewContextModel>Quantity}"
                                                        emphasized="false"
                                                    />
                                                    <Text id="_IDGenText12"
                                                        text="{viewContextModel>UnitOfMeasure}"
                                                    />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>

