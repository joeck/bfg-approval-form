                                        <!-- Sold-To Section -->
                                        <VBox id="_IDGenVBox15"
                                            class="sapUiMediumMarginEnd sapUiMediumMarginBottom"
                                        >
                                            <Title id="_IDGenTitle11"
                                                text="Sold-To"
                                                level="H3"
                                                class="sapUiMediumMarginBottom"
                                            />

                                            <f:SimpleForm
                                                id="soldToForm1"
                                                editable="false"
                                                layout="ResponsiveGridLayout"
                                                labelSpanXL="4"
                                                labelSpanL="4"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="1"
                                                singleContainerFullSize="false"
                                            >
                                                <f:content>
                                                    <Label id="_IDGenLabel31" text="Name" />
                                                    <Input id="_IDGenText1281"
                                                        value="{viewContextModel>/SoldTo/Name}"
                                                    />

                                                    <Label id="_IDGenLabel41" text="City, State" />
                                                    <Input id="_IDGenText181"
                                                        value="{viewContextModel>/SoldTo/CityState}"
                                                    />

                                                    <Label id="_IDGenLabel5" text="Street" />
