<mvc:View
    controllerName="bfgmgntappr.workflowuimodule.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:uxap="sap.uxap"
	xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
>
    <App id="app">
        <uxap:ObjectPageLayout
            id="objectPageLayout"
            showTitleInHeaderContent="true"
        >
            <!-- Object Page Header -->
            <uxap:headerTitle>
                <uxap:ObjectPageDynamicHeaderTitle id="objectPageHeaderTitle">
                    <uxap:expandedHeading>
                        <Title
                            id="title"
                            text="{context>/documentTitle}"
                            wrapping="true"
                        />
                    </uxap:expandedHeading>
                </uxap:ObjectPageDynamicHeaderTitle>
            </uxap:headerTitle>

            <!-- Object Page Header Content -->
            <uxap:headerContent>
                <layout:Grid
                    id="ophg"
                    defaultSpan="L3 M6 S12"
                    class="sapUiResponsiveMargin"
                >
                    <VBox id="_IDGenVBox1">
                        <Label id="_IDGenLabel" text="Purchase Order" />
                        <ObjectAttribute id="_IDGenObjectAttribute" text="{context>/PurchaseOrder}" />
                    </VBox>
                    <VBox id="_IDGenVBox2">
                        <Label id="_IDGenLabel1" text="Amount" />
                        <ObjectStatus id="_IDGenObjectStatus" 
                            state="None"
                            text="{context>/Amount} {context>/Currency}"/>
                    </VBox>
                    <VBox id="_IDGenVBox3">
                        <Label id="_IDGenLabel2" text="Purchase Order Date" />
                        <ObjectAttribute id="_IDGenObjectAttribute2" text="{context>/PurchaseOrderDate}" />
                    </VBox>
                </layout:Grid>
            </uxap:headerContent>

            <!-- Object Page Sections -->
            <uxap:sections>
                <!-- Header Data Section -->
                <uxap:ObjectPageSection
                    id="headerDataSection"
                    title="Header Data"
                    titleUppercase="false"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="headerDataSubSection"
                            title=""
                        >
                            <uxap:blocks>
                                <VBox id="_IDGenVBox4" class="sapUiMediumMargin">
                                    <layout:Grid id="_IDGenGrid"
                                        defaultSpan="L6 M12 S12"
                                        class="sapUiLargeMarginTop"
                                    >
                                        <!-- Sold-To Section with Enrichment -->
                                        <VBox id="_IDGenVBox35"
                                            class="sapUiMediumMarginEnd sapUiMediumMarginBottom"
                                            visible="{:= !!%{context>/SoldTo/Enrichment}}"
                                        >
                                            <Title id="_IDGenTitle3"
                                                text="Sold-To (Master Data)"
                                                level="H3"
                                                class="sapUiMediumMarginBottom"
                                                visible="{:= !!%{context>/SoldTo/Enrichment}}"
                                            />
                                            <!-- <core:Icon
                                                src="sap-icon://validate"
                                                class="size1"
                                                color="#64E4CE" >
                                            </core:Icon> -->

                                            <f:SimpleForm
                                                id="soldToFormEnrichment"
                                                editable="false"
                                                layout="ResponsiveGridLayout"
                                                labelSpanXL="4"
                                                labelSpanL="4"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="1"
                                                singleContainerFullSize="false"
                                                visible="{:= !!%{context>/SoldTo/Enrichment}}"
                                            >
                                                <f:content>
                                                    <Label id="_IDGenLabel11"  text="Name" />
                                                    <Input id="_IDGenInput1"
                                                        value="{context>/SoldTo/Enrichment/Name}"
                                                    />

                                                    <Label id="_IDGenLabel34" text="City, State" />
                                                    <Input id="_IDGenText31"
                                                        value="{context>/SoldTo/Enrichment/CityState}"
                                                    />

                                                    <Label id="_IDGenLabe3l5" text="Street" />
                                                    <Input id="_IDGenText32"
                                                        value="{context>/SoldTo/Enrichment/Street}"
                                                    />

                                                    <Label id="_IDGenLabe3l6" text="Postal Code" />
                                                    <Input id="_IDGenText33"
                                                        value="{context>/SoldTo/Enrichment/PostalCode}"
                                                    />
                                                </f:content>
                                            </f:SimpleForm>
                                        </VBox>

                                        <!-- Sold-To Section -->
                                        <VBox id="_IDGenVBox15"
                                            class="sapUiMediumMarginEnd sapUiMediumMarginBottom"
                                            visible="{:= !%{context>/SoldTo/Enrichment} }"
                                        >
                                            <Title id="_IDGenTitle11"
                                                text="Sold-To"
                                                level="H3"
                                                class="sapUiMediumMarginBottom"
                                            />

                                            <f:SimpleForm
                                                id="soldToForm1"
                                                editable="false"
                                                layout="ResponsiveGridLayout"
                                                labelSpanXL="4"
                                                labelSpanL="4"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="1"
                                                singleContainerFullSize="false"
                                            >
                                                <f:content>
                                                    <Label id="_IDGenLabel31" text="Name" />
                                                    <Input id="_IDGenText1281"
                                                        value="{context>/SoldTo/Name}"
                                                    />

                                                    <Label id="_IDGenLabel41" text="City, State" />
                                                    <Input id="_IDGenText181"
                                                        value="{context>/SoldTo/CityState}"
                                                    />

                                                    <Label id="_IDGenLabel5" text="Street" />
                                                    <Input id="_IDGenText2"
                                                        value="{context>/SoldTo/Street}"
                                                    />

                                                    <Label id="_IDGenLabel6" text="Postal Code" />
                                                    <Input id="_IDGenText3"
                                                        value="{context>/SoldTo/PostalCode}"
                                                    />
                                                </f:content>
                                            </f:SimpleForm>
                                        </VBox>

                                        <!-- Ship-To Section -->
                                        <VBox id="_IDGenVBox6" class="sapUiMediumMarginBottom">
                                            <Title id="_IDGenTitle1"
                                                text="Ship-To"
                                                level="H3"
                                                class="sapUiMediumMarginBottom"
                                            />

                                            <f:SimpleForm
                                                id="shipToForm"
                                                editable="false"
                                                layout="ResponsiveGridLayout"
                                                labelSpanXL="4"
                                                labelSpanL="4"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="1"
                                                singleContainerFullSize="false"
                                            >
                                                <f:content>
                                                    <Label id="_IDGenLabel7" text="Name" />
                                                    <Input id="_IDGenText4"
                                                        value="{context>/ShipTo/Name}"
                                                    />

                                                    <Label id="_IDGenLabel8" text="City, State" />
                                                    <Input id="_IDGenText5"
                                                        value="{context>/ShipTo/CityState}"
                                                    />

                                                    <Label id="_IDGenLabel9" text="Street" />
                                                    <Input id="_IDGenText6"
                                                        value="{context>/ShipTo/Street}"
                                                    />

                                                    <Label id="_IDGenLabel10" text="Postal Code" />
                                                    <Input id="_IDGenText7"
                                                        value="{context>/ShipTo/PostalCode}"
                                                    />
                                                </f:content>
                                            </f:SimpleForm>
                                        </VBox>
                                    </layout:Grid>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>

                <!-- Line Items Section -->
                <uxap:ObjectPageSection
                    id="lineItemsSection"
                    title="Line Items"
                    titleUppercase="false"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="lineItemsSubSection"
                            title=""
                        >
                            <uxap:blocks>
                                <VBox id="_IDGenVBox7" class="sapUiMediumMargin">
                                    <Table
                                        id="lineItemsTable"
                                        items="{context>/LineItems}"
                                        mode="None"
                                        class="sapUiResponsiveMargin"
                                        growing="true"
                                        growingThreshold="100"
                                    >
                                        <headerToolbar>
                                            <Toolbar id="_IDGenToolbar">
                                                <Title id="_IDGenTitle2"
                                                    text="Materials"
                                                    level="H2"
                                                />
                                            </Toolbar>
                                        </headerToolbar>
                                        <columns>
                                            <Column id="_IDGenColumn88">
                                                <Text id="_IDGenText88" text="Bell Material" />
                                            </Column>
                                            <Column id="_IDGenColumn">
                                                <Text id="_IDGenText8" text="Customer Material" />
                                            </Column>
                                            <Column id="asdf">
                                                <Text id="_IDGenText8123" text="Description" />
                                            </Column>
                                            <Column id="_IDGenColumn22">
                                                <Text id="_IDGenText22" text="Item Number" />
                                            </Column>
                                            <Column id="_IDGenColumn4">
                                                <Text id="_IDGenText212" text="Unit Price" />
                                            </Column>
                                            <Column id="_IDGenColumn5">
                                                <Text id="_IDGenText232" text="Curency" />
                                            </Column>
                                            <Column id="_IDGenColumn1">
                                                <Text id="_IDGenText9" text="Quantity" />
                                            </Column>
                                            <Column id="_IDGenColumn2">
                                                <Text id="_IDGenText10" text="Unit of Measure" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem id="_IDGenColumnListItem">
                                                <cells>
                                                    <Text id="_IDGenText11"
                                                        text="{context>SupplierMaterialNumber}"
                                                        wrapping="false"
                                                    />
                                                    <Text id="_IDGenText111"
                                                        text="{context>CustomerMaterialNumber}"
                                                        wrapping="false"
                                                    />
                                                    <Text id="_IDGenText21"
                                                        text="{context>Description}"
                                                        wrapping="false"
                                                    />
                                                    <ObjectNumber id="_IDGenObjectNumber2"
                                                        number="{context>ItemNumber}"
                                                        emphasized="false"
                                                    />
                                                    <ObjectNumber id="_IDGenObjectNumber12"
                                                        number="{context>UnitPrice}"
                                                        emphasized="false"
                                                    />
                                                    <Text id="_IDGenText121"
                                                        text="{context>CurrencyCode}"
                                                        wrapping="false"
                                                    />
                                                    <ObjectNumber id="_IDGenObjectNumber"
                                                        number="{context>Quantity}"
                                                        emphasized="false"
                                                    />
                                                    <Text id="_IDGenText12"
                                                        text="{context>UnitOfMeasure}"
                                                    />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>

                <!-- Comments Section -->
                <uxap:ObjectPageSection
                    id="commentsSection"
                    title="Comments"
                    titleUppercase="false"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="commentsSubSection"
                            title=""
                        >
                            <uxap:blocks>
                                <VBox id="_IDGenVBox8" class="sapUiMediumMargin">
                                    <VBox id="_IDGenVBox9"
                                        items="{context>/Comments}"
                                        class="sapUiMediumMarginTop"
                                    >
                                        <Text id="_IDGenText13"
                                            text="{context>}"
                                            class="sapUiSmallMarginBottom"
                                        />
                                    </VBox>
                                    <!-- Fallback for single comment string -->
                                    <Text id="_IDGenText14"
                                        text="{context>/Comments}"
                                        visible="{= typeof ${context>/Comments} === 'string'}"
                                        class="sapUiMediumMarginTop"
                                    />
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>

            <uxap:sections>
                <uxap:ObjectPageSection
                    id="pdfSection"
                    title="Source Document"
                titleUppercase="false">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection id="pdfSubSection">
                            <uxap:blocks>
                                <VBox id="_IDGenVBox10" class="sapUiMediumMargin">
                                    <PDFViewer displayType="Embedded"
                                        id="pdfViewer"
                                    source="{context>/PdfSource}"
                                    title="{context>/FileName}"
                                        width="100%"
                                        height="600px"
                                        showDownloadButton="true"
                                        visible="{context>/PdfAvailable}"
                                    />
                                    <MessageStrip id="_IDGenMessageStrip"
                                        text="No document available."
                                        type="Information"
                                        visible="{= ${context>/PdfAvailable} === false}"
                                    />
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>
        </uxap:ObjectPageLayout>
    </App>
</mvc:View>
