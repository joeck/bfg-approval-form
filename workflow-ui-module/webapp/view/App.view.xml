    <App id="app">
        <uxap:ObjectPageLayout
            id="objectPageLayout"
            showTitleInHeaderContent="true"
        >
            <!-- Object Page Header -->
            <uxap:headerTitle>
                <uxap:ObjectPageDynamicHeaderTitle id="objectPageHeaderTitle">
                    <uxap:expandedHeading>
                        <Title
                            id="title"
                            text="{viewContextModel>/documentTitle}"
                            wrapping="true"
                        />
                    </uxap:expandedHeading>
                </uxap:ObjectPageDynamicHeaderTitle>
            </uxap:headerTitle>

            <!-- Object Page Header Content -->
            <uxap:headerContent>
                <layout:Grid
                    id="ophg"
                    defaultSpan="L3 M6 S12"
                    class="sapUiResponsiveMargin"
                >
                    <VBox id="_IDGenVBox1">
                        <Label id="_IDGenLabel" text="Purchase Order" />
                        <ObjectStatus id="_IDGenObjectStatus1" 
                            text="{viewContextModel>/PurchaseOrder}"
                            state="{path: 'viewContextModel>/PurchaseOrderConfidence', formatter: '.formatConfidenceState'}" />
                    </VBox>
                    <VBox id="_IDGenVBox2">
                        <Label id="_IDGenLabel1" text="Amount" />
                        <ObjectStatus id="_IDGenObjectStatus" 
                            state="{path: 'viewContextModel>/AmountConfidence', formatter: '.formatConfidenceState'}"
                            text="{viewContextModel>/Amount} {viewContextModel>/Currency}"/>
                    </VBox>
                    <VBox id="_IDGenVBox3">
                        <Label id="_IDGenLabel2" text="Purchase Order Date" />
                        <ObjectStatus id="_IDGenObjectStatus2" 
                            text="{viewContextModel>/PurchaseOrderDate}"
                            state="{path: 'viewContextModel>/PurchaseOrderDateConfidence', formatter: '.formatConfidenceState'}" />
                    </VBox>
                </layout:Grid>
            </uxap:headerContent>

            <!-- Object Page Sections -->
            <uxap:sections>
                <!-- Header Data Section -->
                <uxap:ObjectPageSection
                    id="headerDataSection"
                    title="Header Data"
                    titleUppercase="false"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="headerDataSubSection"
                            title=""
                        >
                            <uxap:blocks>
                                <HBox id="_IDGenHBox1" visible="{:= !!%{context>/edit/Enrichment}}">
                                    <f:SimpleForm id="SimpleFormDisplay354"
                                        visible="{:= !!%{context>/edit/Enrichment}}"
                                        editable="false"
                                        layout="ResponsiveGridLayout"
                                        title="Address"
                                        labelSpanXL="3"
                                        labelSpanL="3"
                                        labelSpanM="3"
                                        labelSpanS="12"
                                        adjustLabelSpan="false"
                                        emptySpanXL="4"
                                        emptySpanL="4"
                                        emptySpanM="4"
                                        emptySpanS="0"
                                        columnsXL="1"
                                        columnsL="1"
                                        columnsM="1"
                                        singleContainerFullSize="false" >
                                        <f:content>
                                            <Label id="_IDGenLabel3" text="Name" />
                                            <Text id="nameText" text="{context>/edit/Enrichment/Name}" />
                                            <Label id="_IDGenLabel4" text="Street/No." />
                                            <Text id="_IDGenText" text="{context>/edit/Enrichment/Street}" />
                                            <Label id="_IDGenLabel11" text="ZIP Code/City" />
                                            <Text id="_IDGenText1" text="{context>/edit/Enrichment/PostalCode} {context>/edit/Enrichment/CityState}" />
                                        </f:content>
                                    </f:SimpleForm>
                                </HBox>
                                <VBox id="_IDGenVBox4" class="sapUiMediumMargin">
                                    <layout:Grid id="_IDGenGrid"
